@model List<Microsoft.AspNetCore.Identity.IdentityRole>

@{
    ViewBag.Title = "All Roles";
}
@if (TempData["msg"] != null)
{
    <div class="mb-3">
        @TempData["msg"]
    </div>
}
<h2>All Roles</h2>
<a href="/Role/AddRole" class="btn btn-primary">Add Roles</a>
<table class="table">
    <thead>
        <tr>
            <th>Role Id</th>
            <th>Role Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
            </tr>
        }
    </tbody>
</table>