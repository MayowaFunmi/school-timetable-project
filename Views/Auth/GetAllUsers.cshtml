@model IEnumerable<ApplicationUser>

@if (TempData["msg"] != null)
{
  <p>@TempData["msg"]</p>
}

<h2>All Users</h2>
<table class="table">
    <thead>
        <tr>
            <th>Username</th>
            <th>Email</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>School</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.School.Name</td>
                <td>@Html.ActionLink("View Users", "GetUserById", new { userId = user.Id }, new { @class = "btn btn-primary" })</td>
                @* <td><a class="btn btn-primary" href="/Auth/GetUserById/@user.Id">View User</a></td> *@
                @* <td>
            <a href="@Url.Action("ViewUserDetails", "YourControllerName", new { userId = user.Id })" class="btn btn-primary">View Details</a></td> *@
            </tr>
        }
    </tbody>
</table>